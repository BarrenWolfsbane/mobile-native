{
    "compilerOptions": {
        "baseUrl": "./",
        "noImplicitAny": false,
        "allowJs": true,
        "declaration": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "jsx": "react",
        "lib": ["es6"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext"
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js",
        "android",
        "ios",
        "__mocks__",
        "__tests__",
        "e2e",
        ".jest",
        "src",
        "./react-native.config.js",
        "./setupTests.js",
        "./tasks/generate_release_json.js",
        "./tasks/poeditor.js",
        "./tasks/unused-locales.js",
        "./tasks/update-settings.js",
        "./tasks/validate-locales.js",
        "./tests-helpers/component-or-wrapped-component.js",
    ]
  }
